            <div class="form-wrapper">
                <form action="/register" method="post">
                    <div class="bookImg">
                        <label class="bookImage">Book Url Link </label><br>
                        <input type="url" class="input-styling" name="image" placeholder="Enter book image url"><br><br>
                    </div>
                    <div class="name">
                        <label id="name-label">Book Name</label><br>
                        <input type="text" class="input-styling" name="bookName" placeholder="Enter book name"><br><br>
                    </div>
                    <div class="bookAuthor">
                        <label id="bookAuthor">Book Author</label><br>
                        <input type="text" class="input-styling" name="bookAuthor"
                            placeholder="Enter book author"><br><br>
                    </div>
                    <div class="code">
                        <label id="bookCode">book Code</label><br>
                        <input type="number" name="bookCode" class="input-styling" id="number"
                            placeholder="Enter Area code" pattern="[0-9]{3}" min="001" max="999" required><br><br>
                    </div>
                    <div class="number">
                        <label>Book Prize</label><br>
                        <input type="number" class="input-styling" name="bookPrize"
                            placeholder="Enter book prize"><br><br>
                    </div>

                    <div class="discription">
                        <label id="discription">Enter Book Discription</label><br>
                        <textarea name="textContent" maxlength="100" class="input-styling" style="height: 65px;"
                            placeholder="Book details in 100 Letters"></textarea><br><br>
                    </div>
                    <div class="submit">
                        <button type="submit" id="submit">Submit</button>
                    </div>
                </form>
            </div>
        </div>